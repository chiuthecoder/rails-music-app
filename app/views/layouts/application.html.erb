<!DOCTYPE html>
<html>
<head>
  <title>Playlist Dashboard</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if signed_in? %>	  
	<!-- navbar -->
	<nav class="navbar navbar-default navbar-static-top">
	  <div class="container">
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <a class="navbar-brand" href="#">Playlist Dashboard</a>
	    </div>
	    <div id="navbar" class="navbar-collapse collapse">

	      <ul class="nav navbar-nav">
	        <li><a href="/songs">All songs</a></li>
	        <li><a href="/songs/new">Add song</a></li>
	        <li>

					</li>
	      </ul>

	      <ul class="nav navbar-nav navbar-right">
	        <li><a class="hide" href="/signup">Register</a></li>


	      </ul>
	    </div>
	  </div>
	</nav>
	<!--END nav-->

<% else %>
	<!-- navbar -->
	<nav class="navbar navbar-default navbar-static-top">
	  <div class="container">
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <a class="navbar-brand" href="#">Playlist Dashboard</a>
	    </div>
	    <div id="navbar" class="navbar-collapse collapse">

	      <ul class="nav navbar-nav">

	        <li>
					</li>
	      </ul>
	      <ul class="nav navbar-nav navbar-right">
	        <li><a href="/signup">Register</a></li>
	        <li><a href="/signin">Sign In</a></li>

	      </ul>
	    </div>
	  </div>
	</nav>
	<!--END nav-->
	<% end %>
	<!-- user specific msg-->
	<div class="container">
		<div class="row">	
				<% if signed_in? %>
				<div class="col-md-9">
				<h2>Hello <%= @user.first_name %>!</h2>
				</div>
				<div class="col-md-3 text-right">		
					<a class="btn btn-default hide" href="/users/<%= @user.id %>/edit">Edit Profile</a>
					<h4><%= link_to('log off', signout_path) %></h4>
				</div>
				<% end %>
		</div>
		</div>
	</div>	
	<!-- main content -->
	<div class="container">
		<div class="row">
			<%= yield %>
		</div>
	</div>

</body>
</html>
